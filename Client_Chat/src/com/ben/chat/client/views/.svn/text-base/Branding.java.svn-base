    private void initLoadBar() {
        Thread t = new Thread(
                new Runnable() {

                    public void run() {
                        while (!dispose) {
                            int i = 0;
                            while (i < 100) {
                                jProgressBar1.setValue(i);
                                i++;
                                try {
                                    Thread.sleep(10);
                                } catch (InterruptedException ex) {
                                    Logger.getLogger(Branding.class.getName()).log(Level.SEVERE, null, ex);
                                }
                            }
                            if(dispose){
                                disposeWindow();
                            }
                            i = 0;
                        }
                    }
                });
                t.start();

    }
    private void disposeWindow() {
        super.dispose();
    }
