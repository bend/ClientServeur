    public void setCallAccepted(boolean b) {
        if (b) {
            labelCall.setText("Call started");
        } else {
            labelCall.setText("Call refused");
            callButton.setEnabled(true);
        }
    }

    public void setDisaproval() {
        try {
            if (callInstance == false) {
                labelCall.setText("Call refused");
                Thread.sleep(1000);
                dispose();
            } else {
                labelCall.setText("Call ended");
                v2.closeConnection();

                Thread.sleep(1000);
                dispose();
            }
        } catch (InterruptedException ex) {
            Logger.getLogger(CallView.class.getName()).log(Level.SEVERE, null, ex);
        }

    }

    public void startCall() {
        callInstance = true;
        labelCall.setText("Call accepted");
        endButton.setEnabled(true);
        v = new VoiceConnection(cv.getHost(), cv.getPort());
        VoiceReceiveStream vrs = new VoiceReceiveStream(this, v);
        vrs.start();
        v2 = new VoiceConnection(cv.getHost(), cv.getPort());
        VoiceRecordStream vres = new VoiceRecordStream(this, v2);
        vres.start();
        cv.sendInt(ChatConstants.VOICE_ID);
        cv.sendText(destUsername);
        cv.sendInt(v.getId());
    }

    void setVoiceId(int id) {
        v2.setPearId(id);
    }

