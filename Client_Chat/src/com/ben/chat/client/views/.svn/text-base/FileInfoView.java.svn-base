    public void setData(String name,String type, long size, ImageIcon icon){
        filenameField.setText(name);
        typeField.setText(type);
        int sizemb  = (int)(size/1024);
        sizeField.setText(Integer.toString(sizemb));
        Image newimg = icon.getImage().getScaledInstance(40, 40, java.awt.Image.SCALE_SMOOTH);
        iconLabel.setIcon(new ImageIcon(newimg));

    }

