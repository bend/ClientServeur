    public void startSecuredChat() {
        try {
            logPane.setText("Initializing encryption\n");
            logPane.setText(logPane.getText() + "generating key...\nsending public key\nwaiting for pear public key");
            key = RSA.generateKey();
            cv.sendInt(ChatConstants.PUBLIC_KEY);
            cv.sendText(destUsername);
            cv.sendObject(key.getPublic());
        } catch (NoSuchAlgorithmException ex) {
            Logger.getLogger(SecureMessageView.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

    public void initializeEncryption() {
        try {
            logPane.setText("Initializing encryption\n");
            cv.sendInt(ChatConstants.PUBLIC_KEY_REQUEST);
            cv.sendText(destUsername);
            logPane.setText(logPane.getText() + "generating key...\nsending public key...\nwaiting for pear's public key...\n");
            key = RSA.generateKey();
            cv.sendInt(ChatConstants.PUBLIC_KEY);
            cv.sendText(destUsername);
            cv.sendObject(key.getPublic());
        } catch (NoSuchAlgorithmException ex) {
            Logger.getLogger(SecureMessageView.class.getName()).log(Level.SEVERE, null, ex);
        }


    }

    void setPublicKey(Object obj) {
        this.publicKey = (PublicKey)obj;
        logPane.setText(logPane.getText() + "Public key received\n");
        sendButton.setEnabled(true);
    }

