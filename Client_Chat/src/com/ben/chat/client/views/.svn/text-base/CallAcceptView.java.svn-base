    private void answerButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_answerButtonActionPerformed
        v = new VoiceConnection(cv.getHost(), cv.getPort());
        VoiceReceiveStream vrs = new VoiceReceiveStream(this, v);
        vrs.start();
        v2 = new VoiceConnection(cv.getHost(), cv.getPort());
        VoiceRecordStream vres = new VoiceRecordStream(this, v2);
        vres.start();
        cv.sendInt(ChatConstants.CALL_ACCEPTANCE);
        cv.sendText(Callerusername);
        answerButton.setEnabled(false);
        cv.sendInt(ChatConstants.VOICE_ID);
        cv.sendText(Callerusername);
        cv.sendInt(v.getId());
        refuseButton.setText("End");
        messageLabel.setText("");
    }//GEN-LAST:event_answerButtonActionPerformed

    private void refuseButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_refuseButtonActionPerformed
        cv.sendInt(ChatConstants.CALL_REFUSE);
        cv.sendText(Callerusername);
        cv.setCallInstance(false);
        try{
            v.closeConnection();
            v2.closeConnection();
        }catch(NullPointerException e){}
        dispose();
    }//GEN-LAST:event_refuseButtonActionPerformed

